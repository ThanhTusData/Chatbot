# Application Settings
APP_NAME=ChatbotMLNLP
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
WEB_HOST=0.0.0.0
WEB_PORT=5000

# Model Paths
INTENT_MODEL_PATH=models/intent/model.h5
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
KB_INDEX_PATH=indexes/kb/

# Database
VECTOR_DB_TYPE=faiss
VECTOR_STORE_PATH=indexes/kb/vectorstore.npy

# Training
BATCH_SIZE=32
EPOCHS=50
LEARNING_RATE=0.001
VALIDATION_SPLIT=0.2

# Monitoring
ENABLE_PROMETHEUS=True
PROMETHEUS_PORT=8001
MLFLOW_TRACKING_URI=http://localhost:5000

# Voice
ENABLE_VOICE=True
TTS_ENGINE=pyttsx3
STT_ENGINE=google

# Security
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here